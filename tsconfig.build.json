{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": true,
        "outDir": "dist/types",
        "rootDir": ".",
        "composite": false,
        "skipLibCheck": true
    },
    "include": ["packages"],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/__tests__/**/*",
        "**/gulpfile.ts",
        "**/test-helper",
        "packages/test-utils",
        "**/*.md"
    ]
}
